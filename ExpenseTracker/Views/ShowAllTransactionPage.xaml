<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.ShowAllTransactionPage"
             Title="Show All Transaction"
             xmlns:helper="clr-namespace:ExpenseTracker.Helper">

    <ContentPage.Resources>
        <ResourceDictionary>
            <helper:TypeToColorConverter x:Key="TypeToColorConverter"/>
            <helper:AmountToColorConverter x:Key="AmountToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Padding="20" Spacing="5">
        <Label Text="Filter Transactions:" FontAttributes="Bold"/>

        <!-- Start Date -->
        <HorizontalStackLayout VerticalOptions="Center">
            <Label Text="Start Date:" WidthRequest="100" VerticalTextAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker" WidthRequest="250" Date="{Binding StartDate}" Format="dd-MM-yyyy"/>
        </HorizontalStackLayout>

        <!-- End Date -->
        <HorizontalStackLayout VerticalOptions="Center">
            <Label Text="End Date:" WidthRequest="100" VerticalTextAlignment="Center"/>
            <DatePicker x:Name="EndDatePicker" WidthRequest="250" Date="{Binding EndDate}" Format="dd-MM-yyyy" />
        </HorizontalStackLayout>

        <Button Text="Apply Filter" Command="{Binding FilterCommand}" Margin="5" />
        <Button Text="Download PDF" Command="{Binding DownloadPdfCommand}" Margin="5" />

        <Label Text="Transaction List:" WidthRequest="250" FontSize="20"  FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        <!-- Header Row -->
        <Grid Padding="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Date"
               FontAttributes="Bold"
               FontSize="16"
               Grid.Column="0"
               VerticalOptions="Center" />

            <Label Text="Category Name"
                FontAttributes="Bold"
                FontSize="16"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalOptions="Center" />

            <Label Text="Amount"
                FontAttributes="Bold"
                FontSize="16"
                Grid.Column="2"
                VerticalOptions="Center" />
        </Grid>

        <!-- Data Rows -->

        <CollectionView VerticalOptions="FillAndExpand" MinimumHeightRequest="400" ItemsSource="{Binding FilteredTransactions}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="Delete"
                                        BackgroundColor="Red"
                                        IconImageSource="delete_icon.png"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                        CommandParameter="{Binding}" />

                                <SwipeItem Text="Update"
                                        BackgroundColor="LightBlue"
                                        IconImageSource="edit_icon.png"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.UpdateCommand}"
                                        CommandParameter="{Binding}" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="10" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Date, StringFormat='{0:MMM dd}'}" Grid.Column="0"/>
                            <Label Text="{Binding Category}" Grid.Column="1"/>
                            <Label Text="{Binding Amount, StringFormat='৳ {0:N2}'}"
                               Grid.Column="2"
                               TextColor="{Binding Type, Converter={StaticResource TypeToColorConverter}}" />
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <BoxView HeightRequest="1"
            Color="Gray"
            HorizontalOptions="FillAndExpand"
            Margin="0,10" />

        <Label HorizontalTextAlignment="Center" FontSize="18">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Total Amount:  " />
                    <Span Text="{Binding TotalBalance, StringFormat='৳ {0:N2}'}"
                    TextColor="{Binding TotalBalance, Converter={StaticResource AmountToColorConverter}}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>
    
    

</ContentPage>
