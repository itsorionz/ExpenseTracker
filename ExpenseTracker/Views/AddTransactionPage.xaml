<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.AddTransactionPage"
             Title="Add Transaction">

    <StackLayout Padding="20" Spacing="10">
        <Picker Title="Type" ItemsSource="{Binding Types}" SelectedItem="{Binding SelectedType}" />
        <Entry Placeholder="Category" Text="{Binding Category}" />
        <Entry Placeholder="Amount" Keyboard="Numeric" Text="{Binding Amount}" />
        <DatePicker Date="{Binding Date}" />
        <Editor Placeholder="Notes" AutoSize="TextChanges" Text="{Binding Notes}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>
