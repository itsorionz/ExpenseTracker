<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.SyncNowPage"
             Title="Cloud Sync Page">


    <StackLayout Padding="20" Spacing="10">
        <Label Text="Sync Now" 
               FontAttributes="Bold"
               FontSize="16"
               Padding="5"/>
        <Button Text="Sync Now" Command="{Binding StartSyncCommand}" />

        <Label Text="Reset Local Database" 
           FontAttributes="Bold"
           FontSize="16"
           Padding="5"/>
        <Button Text="Reset Local DB" Command="{Binding ResetLocalDatabaseCommand}" />

        <Label Text="Reset Cloud Database" 
            FontAttributes="Bold"
            FontSize="16"
            Padding="5"/>
        <Button Text="Reset Cloud DB" Command="{Binding ReseCloudDatabaseCommand}" />
    </StackLayout>
    
</ContentPage>