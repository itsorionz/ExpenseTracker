<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.Views.SyncNowPage"
             Title="Cloud Sync Page">

    <ContentPage.Content>
        <!-- Main Content Stack -->
        <Grid>
            <StackLayout Padding="20" Spacing="10">
                <Label Text="Sync Now" 
                       FontAttributes="Bold"
                       FontSize="16"
                       Padding="5"/>
                <Button Text="Sync Now" Command="{Binding StartSyncCommand}" />

                <Label Text="Reset Local Database" 
                       FontAttributes="Bold"
                       FontSize="16"
                       Padding="5"/>
                <Button Text="Reset Local DB" Command="{Binding ResetLocalDatabaseCommand}" />

                <Label Text="Reset Cloud Database" 
                       FontAttributes="Bold"
                       FontSize="16"
                       Padding="5"/>
                <Button Text="Reset Cloud DB" Command="{Binding ReseCloudDatabaseCommand}" />
            </StackLayout>

            <!-- Layer 1: ActivityIndicator overlay -->
            <Grid IsVisible="{Binding IsBusy}"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Color="White"
                                   WidthRequest="50"
                                   HeightRequest="50" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>