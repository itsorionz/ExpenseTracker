<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ExpenseTracker.Views"
       x:Class="ExpenseTracker.AppShell"
       Title="Expense Tracker">

    <ShellItem Title="Home" Route="HomePage" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </ShellItem>

    <ShellItem Title="Today's Transactions" Route="DailyTransactionPage" Icon="transactional.png">
        <ShellContent ContentTemplate="{DataTemplate views:DailyTransactionPage}" />
    </ShellItem>

    <ShellItem Title="Show All Transaction" Route="ShowAllTransactionPage" Icon="transaction.png">
        <ShellContent ContentTemplate="{DataTemplate views:ShowAllTransactionPage}" />
    </ShellItem>

    <ShellItem Title="Monthly Report Chart" Route="MonthlyReportPage" Icon="report.png">
        <ShellContent ContentTemplate="{DataTemplate views:MonthlyReportPage}" />
    </ShellItem>

</Shell>
